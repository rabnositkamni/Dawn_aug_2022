.content-vertical__block-paragraph {
    display: flex;
    align-items: flex-start;

    .svg-icon-check {
        position: relative;
        width: fit-content;

        & svg {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        &:after {
            content: '';
            display: block;
            width: 16px;
            height: 16px;
            margin: 12px 4px;
            border-radius: 50%;
            z-index: -1;
        }
    }

    p{
        margin-left: 1rem;
        margin-block-start: 1rem;
        margin-block-end: 1rem;
        line-height: 2.2rem;
    }

    @media (min-width: 992px) {
        p {
            line-height: 2.5rem;
            font-size: 1.75rem;
        }
    }
}