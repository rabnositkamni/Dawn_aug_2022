.content-vertical {
    max-width: 100%;
    padding: 0 0;

    @media (min-width: 640px) {
        display: grid;
        grid-template-columns: 1fr 1fr;
    }
}

.content-vertical__left {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-bottom: 40px;
    padding: 0 2.5rem;

    h2 {
        font-size: 5rem;
        font-weight: 900;
        line-height: 1em;
        letter-spacing: -0.05rem;
        margin-block-end: 0.1em;
    }

    .content-vertical__text {
        font-family: var(--font-base-family);
        line-height: 1.75em;
        font-size: 1.7rem;
        letter-spacing: 0.04em;

        p {
            margin-block-end: 1.6em;
            color: var(--color-foreground);
        }
    }

    @media (min-width: 640px) {
        max-width: 530px;
        margin: 0 auto;
    }

    @media (min-width: 992px) {
        h2 {
            font-size: 6rem;
        }
    }

    @media (min-width: 1200px) {
        padding: 0;
    }
}

.listitems {
    display: flex;
    flex-wrap: wrap;
    margin: 0 -6px;
}

.listitem {
    position: relative;
    display: flex;
    align-items: center;
    width: fit-content;
    padding: 7px;
    margin: 4px;
    cursor: pointer;

    &.active {
        cursor: auto;
        &:after {
            opacity: 0;
        }
    }

    &:after {
        display: block;
        content: '';
        position: absolute;
        border-radius: 100px;
        transition: 0.3s;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        opacity: 0.5;
        z-index: 1;
        background-color: #F6F6F6;
    }

    .listitem__icon {
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
        height: 28px;
        width: 28px;

        + h4 {
            font-weight: 700;
            margin-right: 10px;
            margin-left: 10px;
        }
    }

    .listitem__substrate {
        position: absolute;
        display: block;
        background-color: #F6F6F6;
        border-radius: 100px;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        z-index: -1;
    }

    h4 {
        margin-block-start: 0.33em;
        margin-block-end: 0.33em;
    }

    @media (min-width: 576px) {
        margin: 6px;
        padding: 12px;

        .listitem__icon {
            height: 32px;
            width: 32px;

            + h4 {
                margin-right: 12px;
                margin-left: 12px;
            }
        }
    }
}

.content-vertical__right {
    width: auto;
    position: relative;

    .background__image {
        z-index: -1;
        line-height: 0;

        svg {
            width: 100%;
            height: 100%;
            transition: 0.5s;
        }
    }

    .background__image--desk {
        display: none;

        @media (min-width: 640px) {
            display: block;
            height: 100%;
        }
    }

    .background__image--mobile {
        display: block;
        margin: 0;

        @media (min-width: 640px) {
            display: none;
        }
    }
}

.content-vertical__blocks {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: -webkit-fill-available;
    overflow-y: scroll;

    &::-webkit-scrollbar {
        width: 0;
    }
}

.content-vertical__block {
    background: #ffffff;
    box-shadow: 8px 20px 40px 0 #2f2f2f38;
    padding: 32px 24px;
    border-radius: 8px;
    max-width: 450px;
    width: auto;
    margin: 30px 25px 0;

    + .content-vertical__block {
        margin-top: 60px;
    }

    &:last-child {
        margin-bottom: 30px;
    }

    p, a {
        font-family: var(--font-heading-family);
        color: var(--color-foreground);
    }

    .button {
        font-family: var(--font-heading-family);
        color: #ffffff;
        margin-top: 20px;
        width: 100%;
        border-radius: 5px;
        &:hover {
            border-radius: 0px;
        }
    }

    .content-vertical__price {
        margin: 20px auto 0px;
        width: fit-content;
        font-size: 1.3rem;
        white-space: nowrap;
    }

    @media (min-width: 500px) {
        margin: 30px auto 0;
    }

    @media (min-width: 640px) {
        width: 90%;
        margin: 80px auto 0;

        &:last-child {
            margin-bottom: 80px;
        }
    }
    @media (min-width: 992px) {
        padding: 48px 44px;

        + .content-vertical__block {
            margin-top: 80px;
        }

        .content-vertical__price {
            font-size: 1.5rem;
        }
    }
}


.content-vertical__block-title {
    display: flex;

    .block__title--icon {
        display: flex;
        align-items: center;

        svg{
            width: 22px;
            height: 22px;
        }
    }

    h3 {
        margin-left: 12px;
        font-size: 2.2rem;
        font-weight: 700;
        margin-block-start: 0.33em;
        margin-block-end: 0.33em;
    }

    @media (min-width: 576px) {
        .block__title--icon svg{
            width: auto;
            height: auto;
        }
    }

    @media (min-width: 992px) {
        h3 {
            font-size: 2.7rem;
        }
    }
}

.content-vertical__block-description p{
    line-height: 2.65rem;
    letter-spacing: -0.01em;
    font-size: 1.6rem;
    margin-top: 1rem;
    @media (min-width: 992px) {
        font-size: 1.9rem;
    }
}

